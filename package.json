{
  "name": "electron-with-react",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all -s build start-electron",
    "start-dev": "npm run webpack-dev-server",
    "start-electron": "electron build",
    "start-electron-dev": "NODE_ENV=development electron -r @babel/register ./src/electron/index.js",
    "webpack-dev-server": "webpack-dev-server --mode=development",
    "build": "webpack --mode=production"
  },
  "dependencies": {
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "react-hot-loader": "4.6.5",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "0.85.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "babel-loader": "8.0.5",
    "copy-webpack-plugin": "5.0.1",
    "css-loader": "2.1.0",
    "electron": "9.1.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.0.1",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "url-loader": "1.1.2",
    "webpack": "4.29.1",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14",
    "webpack-node-externals": "1.7.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "react",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error",
      "import/no-extraneous-dependencies": 0
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
